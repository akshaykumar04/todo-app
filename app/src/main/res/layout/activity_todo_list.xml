<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFffff"
        tools:context="com.sstechcanada.todo.activities.TodoListActivity">

        <include
            android:id="@+id/include"
            layout="@layout/act_bar" />

        <ImageView
            android:id="@+id/placeholderImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="16dp"
            android:padding="20dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/include"
            app:srcCompat="@drawable/placeholder" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:id="@+id/tabBar"
            android:background="@drawable/tab_bg"
            app:layout_constraintTop_toBottomOf="@id/include"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorTab"
                android:fontFamily="@font/raleway"
                android:textStyle="bold"
                android:paddingHorizontal="18dp"
                android:paddingVertical="8dp"
                android:textColor="#ffffff"
                android:drawableLeft="@drawable/ic_to_do_list"
                android:drawablePadding="10dp"
                android:text="Ongoing"
                android:textSize="12sp"
                android:textAlignment="center"
                android:textAllCaps="true" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/colorTab"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/raleway"
                android:textStyle="bold"
                android:paddingVertical="8dp"
                android:paddingHorizontal="18dp"
                android:drawableRight="@drawable/ic_lock"
                android:drawablePadding="10dp"
                android:textSize="12sp"
                android:textAlignment="center"
                android:textColor="@color/textHeadings"
                android:text="completed"
                android:textAllCaps="true" />

        </LinearLayout>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_todo_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:visibility="visible"
            app:layout_anchor="@+id/placeholderImage"
            app:layout_anchorGravity="center"
            app:layout_constraintTop_toBottomOf="@id/tabBar" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            android:layout_margin="16dp"
            android:contentDescription="@string/add_new_task"
            android:src="@drawable/ic_fab_add"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>